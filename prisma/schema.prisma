// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String  @id @default(uuid()) @map("_id")
  name        String
  description String?
  status      Status  @default(PENDING)

  @@map("task")
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELED
}
